<?xml version="1.0" encoding="UTF-8" ?>

<openerp>
  <data>

    <record id="hr_rfid_management" model="ir.module.category">
      <field name="name">RFID Access</field>
      <field name="description">User access level for the RFID module</field>
      <field name="sequence">3</field>
    </record>

    <record id="hr_rfid_view_module_discovery" model="res.groups">
      <field name="name">HR RFID: View Module Discovery</field>
      <field name="category_id" ref="base.module_category_hidden" />
      <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="hr_rfid_view_rfid_data" model="res.groups">
      <field name="name">HR RFID: View data in users</field>
      <field name="category_id" ref="base.module_category_hidden" />
    </record>

    <record id="hr_rfid_view_rfid_pin_code_data" model="res.groups">
      <field name="name">HR RFID: View pin code data in users</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid.hr_rfid_view_rfid_data'))]" />
      <field name="category_id" ref="base.module_category_hidden" />
    </record>

    <record id="hr_rfid_view_door_open_close" model="res.groups">
      <field name="name">HR RFID: View the door open/close buttons</field>
      <field name="category_id" ref="base.module_category_hidden" />
      <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="hr_rfid_group_officer_department" model="res.groups">
      <field name="name">Officer Own Department</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid.hr_rfid_view_rfid_data'))]" />
      <field name="category_id" ref="hr_rfid_management" />
    </record>

    <record id="hr_rfid_group_officer" model="res.groups">
      <field name="name">Officer</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid.hr_rfid_group_officer_department'))]" />
      <field name="category_id" ref="hr_rfid_management" />
    </record>

    <record id="hr_rfid_group_manager_department" model="res.groups">
      <field name="name">Manager Own Department</field>
      <field name="implied_ids"
             eval="[(4, ref('hr_rfid.hr_rfid_group_officer')), (4, ref('hr_rfid.hr_rfid_view_rfid_data')), (4, ref('hr_rfid.hr_rfid_view_rfid_pin_code_data'))]" />
      <field name="category_id" ref="hr_rfid_management" />
    </record>

    <record id="hr_rfid_group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="implied_ids" eval="[(4, ref('hr_rfid.hr_rfid_group_manager_department'))]" />
      <field name="users" eval="[(4, ref('base.user_root'))]"/>
      <field name="category_id" ref="hr_rfid_management" />
    </record>

    <record id="hr_rfid_group_officer_department_cards_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID: Only show own department's cards</field>
      <field name="model_id" ref="hr_rfid.model_hr_rfid_card" />
      <field name="domain_force">[('employee_id.department_id.id','=',user.employee_ids.department_id.id)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_group_officer_department'),ref('hr_rfid_group_manager_department')])]" />
      <field name="perm_create" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

    <record id="hr_rfid_group_officer_department_events_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID: Only show department's user events</field>
      <field name="model_id" ref="hr_rfid.model_hr_rfid_event_user" />
      <field name="domain_force">[('employee_id.department_id.id','=',user.employee_ids.department_id.id)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_group_officer_department'),ref('hr_rfid_group_manager_department')])]" />
      <field name="perm_create" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

    <record id="hr_rfid_show_cards_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID: Show cards</field>
      <field name="model_id" ref="hr_rfid.model_hr_rfid_card" />
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_group_officer'), ref('hr_rfid_group_manager')])]" />
      <field name="perm_create" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

    <record id="hr_rfid_group_show_events_rule" model="ir.rule">
      <field name="active" eval="True" />
      <field name="name">HR RFID: Show user events</field>
      <field name="model_id" ref="hr_rfid.model_hr_rfid_event_user" />
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(6, 0, [ref('hr_rfid_group_officer'), ref('hr_rfid_group_manager')])]" />
      <field name="perm_create" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_unlink" eval="1"/>
      <field name="perm_read" eval="1"/>
    </record>

  </data>
</openerp>
